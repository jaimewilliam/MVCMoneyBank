@model IEnumerable<MVCMoneyBank.Models.AccountList>

@{
    ViewBag.Title = "List";
}

<h2>Money Bank</h2>
<div class="form-control-static">
    <p style="float:right">
        @Html.ActionLink("Add New Account", "Edit", new { acctid = 0 })
    </p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobileNumber)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
            @Html.ActionLink("View", "Details", new { acctId = item.AccountId }) |
            @Html.ActionLink("Delete", "Delete", new { acctId = item.AccountId })
        </td>
    </tr>
}

</table>
